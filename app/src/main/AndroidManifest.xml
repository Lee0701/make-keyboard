<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MakeKeyboard"
        tools:targetApi="31" >

        <service
            android:name=".service.IMEService"
            android:label="@string/app_name"
            android:permission="android.permission.BIND_INPUT_METHOD"
            android:exported="true">
            <intent-filter>
                <action
                    android:name="android.view.InputMethod" />
            </intent-filter>
            <meta-data
                android:name="android.view.im"
                android:resource="@xml/method" />
        </service>

        <activity
            android:name="ee.oyatl.ime.make.settings.SettingsActivity"
            android:exported="true"
            android:configChanges="orientation"
            android:label="@string/title_activity_settings">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="ee.oyatl.ime.make.settings.KeyboardLayoutSettingsActivity"
            android:exported="false"
            android:configChanges="orientation"
            android:label="@string/title_activity_keyboard_layout" />

        <activity
            android:name="ee.oyatl.ime.make.service.ImportExportActivity"
            android:exported="false"
            android:label="@string/title_activity_import_export" />

    </application>

</manifest>