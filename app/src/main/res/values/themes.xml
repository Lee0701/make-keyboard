<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MakeKeyboard" parent="AppTheme">
        <item name="dialogCornerRadius">28dp</item>
    </style>

    <style name="Theme.MakeKeyboard.TabBar.Base">
        <item name="marginVertical">@dimen/margin_small</item>
    </style>

    <style name="Theme.MakeKeyboard.Tab.Base">
        <item name="android:textSize">20sp</item>
        <item name="tabHeight">@dimen/tabbar_height</item>
        <item name="tabMargin">@dimen/margin_smaller</item>
        <item name="tabPaddingVertical">0dp</item>
        <item name="tabPaddingHorizontal">@dimen/margin_small</item>
    </style>

    <style name="Theme.MakeKeyboard.Candidates.Item">
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:textSize">@dimen/candidates_text_size</item>
    </style>

    <style name="Theme.MakeKeyboard.PreferenceCategory" parent="Preference.Category">
        <item name="titleTextAppearance">@style/Theme.MakeKeyboard.PreferenceCategory.Title</item>
    </style>

    <style name="Theme.MakeKeyboard.Preference" parent="Preference">
        <item name="titleTextAppearance">@style/Theme.MakeKeyboard.Preference.Title</item>
        <item name="summaryTextAppearance">@style/Theme.MakeKeyboard.Preference.Summary</item>
    </style>

    <style name="Theme.MakeKeyboard.KeyboardLayoutSettings.ImageButton">
        <item name="android:layout_width">@dimen/icon_button_width</item>
        <item name="android:layout_height">@dimen/icon_button_height</item>
    </style>

</resources>