<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.MakeKeyboard.Keyboard.Overlay" parent="ThemeOverlay.Material3.DynamicColors.Dark">
        <item name="background">@android:color/system_neutral1_900</item>
    </style>

    <style name="Theme.MakeKeyboard.Keyboard.Key.Overlay" parent="ThemeOverlay.Material3.DynamicColors.Dark">
        <item name="android:textSize">@dimen/key_text_size</item>
        <item name="android:textColor">@android:color/system_accent1_10</item>
        <item name="iconTint">@android:color/system_accent1_10</item>
        <item name="marginHorizontal">@dimen/key_margin_horizontal</item>
        <item name="marginVertical">@dimen/key_margin_vertical</item>
        <item name="background">@drawable/key_bg</item>
        <item name="backgroundTint">@color/key_bg_dynamic_dark</item>
    </style>

    <style name="Theme.MakeKeyboard.Keyboard.Key.Mod.Overlay" parent="Theme.MakeKeyboard.Keyboard.Key.Overlay">
        <item name="backgroundTint">@color/key_bg_dynamic_dark_mod</item>
    </style>

    <style name="Theme.MakeKeyboard.Keyboard.Key.Return.Overlay" parent="Theme.MakeKeyboard.Keyboard.Key.Overlay">
        <item name="backgroundTint">@color/key_bg_dynamic_dark_return</item>
        <item name="iconTint">@android:color/system_accent1_50</item>
    </style>

    <style name="Theme.MakeKeyboard.Keyboard.KeyPopup.Overlay">
        <item name="android:textSize">@dimen/key_popup_text_size</item>
        <item name="android:textColor">@android:color/system_accent2_50</item>
        <item name="background">@drawable/key_popup_bg</item>
        <item name="backgroundTint">@android:color/system_neutral1_800</item>
        <item name="iconTint">@android:color/system_accent1_50</item>
    </style>

    <style name="Theme.MakeKeyboard.TabBar.Overlay">
        <item name="background">@android:color/system_neutral1_900</item>
    </style>

    <style name="Theme.MakeKeyboard.Tab.Overlay">
        <item name="background">@drawable/tab_bg</item>
        <item name="backgroundTint">@color/tab_bg_dynamic_dark</item>
        <item name="android:textColor">@android:color/system_accent2_50</item>
    </style>

    <style name="Theme.MakeKeyboard.Candidates">
        <item name="android:background">@android:color/system_neutral1_900</item>
    </style>

    <style name="Theme.MakeKeyboard.Candidates.Item">
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:textSize">@dimen/candidates_text_size</item>
    </style>

</resources>